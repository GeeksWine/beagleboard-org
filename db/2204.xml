  if($(&apos;#a&apos;).css(&apos;left&apos;) == onleft.left) {
   $(&apos;#a&apos;).animate(onright, 1000);
   $(&apos;#a&apos;).css(&apos;z-index&apos;, &apos;1&apos;);
