<style type="text/css">
 table.membertbl 
 {
  border-style:solid; 
  border-color:#C95701;
  display:none;
  margin-bottom:20px;
 }
</style>

<script type="text/javascript">
 numMembers = <% this.numMembers %>;
 function SynchronizeSelection (sel, val)
  {
   for (i=0;i<sel.options.length;i++)
    {
     if (sel.options[i].value == val)
      sel.selectedIndex = i;
    }
  }
 function RemoveMember (userid,name,role)
  {
   userid.value = "";
   name.value = "";
   role.selectedIndex = 0;
  }
 function AddMember()
  {
   var objList;
   nCurMember = 0;
   if (numMembers >= 10)
    return;
   objList = document.theForm.getElementsByTagName("table");
   for (i=0;i<objList.length;i++)
    {
     if (objList[i].className == "membertbl")
      {
       if (nCurMember++ < numMembers)
        objList[i].style.display="block";
      }
    }
   numMembers++;
  }  
</script>

<table border="0" width="944" id="table2" cellspacing="10" cellpadding="0">
 <tr>
  <td>
   <form name="theForm" method="POST">
    <h1>Register a Beagle Board related project</h1>
    <h2>Project Information</h2>
    <p align="center"><font color="red"><% this.errmsg %></font></p>
    <table>
     <tr>
      <td align="right" width="250"><font color="orange">*</font>Registrant</td>
      <td><input name="registrant" type="text" size="50" value="<% this.registrant %>" readonly style="color:#CCC" />
      </td>
     </tr>
     <tr>
      <td align="right"><font color="orange">*</font>Project shortname/URI</td>
      <td><input name="uri" type="text" size="20" maxlength="20" value="<% this.uri %>" /></td>
     </tr>
     <tr>
      <td align="right"><font color="orange">*</font>Project Name</td>
      <td><input name="pname" type="text" size="50" value="<% this.pname %>" /></td>
     </tr>
     <tr>
      <td align="right"><font color="orange">*</font>Short Description/Summary</td>
      <td><textarea name="shortdesc" cols="45" rows="4"><% this.shortdesc %></textarea></td>
     </tr>
     <tr>
      <td align="right"><font color="orange">*</font>Full Description</td>
      <td><textarea name="desc" cols="45" rows="4"><% this.desc %></textarea></td>
     </tr>
     <tr>
      <td align="right"><font color="orange"></font>Homepage/URL</td>
      <td><input name="homepage" type="text" size="50" value="<% this.homepage %>" /></td>
     </tr>
     <tr>
      <td align="right">Wiki</td>
      <td><input name="wiki" type="text" size="50" value="<% this.wiki %>" /></td>
     </tr>
     <tr>
      <td align="right">Mailing List</td>
      <td><input name="mailinglist" type="text" size="50" value="<% this.mailinglist %>" /></td>
     </tr>
     <tr>
      <td align="right">Download link</td>
      <td><input name="downloadlink" type="text" size="50" value="<% this.downloadlink %>" /></td>
     </tr>
     <tr>
      <td align="right">RSS feed</td>
      <td><input name="rssfeed" type="text" size="50" value="<% this.rssfeed %>" /></td>
     </tr>
     <tr>
      <td align="right">Repository</td>
      <td>
       <select name="repository">
        <option value=""></option>
        <option value="CVS">CVS</option>
        <option value="Bitkeeper">Bitkeeper</option>
        <option value="Subversion">Subversion</option>
        <option value="GIT">GIT</option>
        <option value="Other">Other</option>
       </select>
       <script>SynchronizeSelection(document.theForm.repository,"<% this.repository %>")</script>
      </td>
     </tr>
     <tr>
      <td align="right">Repository URL</td>
      <td><input name="repositoryurl" type="text" size="50" value="<% this.repositoryurl %>" /></td>
     </tr>
    </table>

    <table width="800" align="center">
     <tr>
      <td><input name="submit" type="submit" value="Save" /></td><td><input type="button" value="Cancel" onClick="self.location='/project'" /></td>
     </tr>	
    </table>
   </form>
  </td>
 </tr>
</table>

