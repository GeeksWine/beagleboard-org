<form action="translate" method="post">
 URI: <% this.uri %><input type="hidden" name="uri" value="<% this.uri %>" /><br />
 Page: <% this.body %><br />
 Translation: <textarea rows="20" cols="80" name="body"><% this.body %></textarea><br />
 Language: <input type="text" name="lang" value="<% this.lang %>" /><br />
 <input type="submit" name="submit" value="Save" />
</form>
