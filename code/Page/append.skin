<form action="append" method="post">
 URI: <% this.uri %><input type="hidden" name="uri" value="<% this.uri %>" /><br />
 Page: <% this.body %><br />
 Append: <textarea rows="10" cols="80" name="body"></textarea><br />
 Language: <% this.lang %><input type="hidden" name="lang" value="<% this.lang %>" /><br />
 <input type="submit" name="submit" value="Save" />
</form>
